---
import Menu from "../components/Menu.astro";
import TOC from "../components/TOC.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
const { title, frontmatter, headings } = Astro.props;
const pageName = title || frontmatter?.title;
const siteName = "池田大輝オフィシャルウェブサイト";
const pageTitle = pageName && Astro.url.pathname != "/" ? pageName + " / " + siteName : siteName;
const requireTOC = frontmatter?.requireTOC;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Menu />
    <main>
      {pageName && <h1>{pageName}</h1>}
      <slot />
    </main>
    {requireTOC && <TOC headings={headings} />}
    <Footer />
    <script>
      import "../scripts/navigation.js";
      import "../scripts/menu.js";
    </script>
  </body>
</html>

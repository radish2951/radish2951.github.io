---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  src: string;
  alt: string;
  class?: string;
  caption?: string;
  loading?: "eager" | "lazy";
}

const { src, alt, class: className, caption, loading } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>("/src/images/**/*.{jpeg,jpg,png,gif,JPEG,JPG,PNG,GIF}");

// ファイルがローカルに存在するかどうか
const isLocal = !!images[src];
---

{
  caption ? (
    <figure>
      {isLocal ? (
        <Image src={images[src]()} alt={alt} class={className} loading={loading} />
      ) : (
        <Image src={src} alt={alt} class={className} inferSize={true} loading={loading} />
      )}
      <figcaption>{caption}</figcaption>
    </figure>
  ) : isLocal ? (
    <Image src={images[src]()} alt={alt} class={className} loading={loading} />
  ) : (
    <Image src={src} alt={alt} class={className} inferSize={true} loading={loading} />
  )
}

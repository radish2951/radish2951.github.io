---
const { character, comment } = Astro.props;

let characterName;

switch (character) {
    case "aoi":
        characterName = "柏木葵";
    case "mio":
        characterName = "明石澪";
    case "hatsune":
        characterName = "須磨初音";
    case "haruka":
        characterName = "桐咲春花";
}
---

<div class="character-comment">
    <div class="character">
        <img
            src="https://pbs.twimg.com/media/GHlTEhLasAAlsxZ?format=jpg&name=large"
            alt={characterName}
            class="character-image"
        />
        <div class="character-name">{characterName}</div>
    </div>
    <div class="character-text">{comment}</div>
</div>

<style>
    .character-comment {
        display: flex;
        flex-direction: row;
        border-radius: 12px;
        padding: 12px;
        width: 500px;
        max-width: 100%;
        box-sizing: border-box;
        gap: 12px;
        margin-block: 12px;
        background: white;
        transform: translateZ(0);
    }

    .character {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex: 0 0 auto;
    }

    img.character-image {
        width: 64px;
        border-radius: 100%;
    }

    .character-name {
        color: #333;
    }

    .character-comment {
        height: auto;
        overflow: hidden;
        transition: all 0.3s;
    }

    .character-comment.hidden {
        height: 0;
        padding: 0;
        margin: 0;
        opacity: 0;
    }
</style>
